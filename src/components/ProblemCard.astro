---
// Problem card component
import { cn } from '@/utils/cn';

interface Props {
  class?: string;
}

const { class: additionalClass = '' } = Astro.props;
---

<article
  class={cn(
    'h-full overflow-hidden rounded-2xl bg-white shadow duration-300 hover:shadow-lg',
    additionalClass
  )}
  itemprop="mainEntity"
  itemscope
  itemtype="https://schema.org/Question"
>
  <div class="aspect-video w-full">
    <slot name="image" />
  </div>
  <div class="p-6">
    <h3
      class="from-primary-600 to-primary-800 mb-3 bg-gradient-to-r bg-clip-text text-lg font-bold text-transparent sm:text-xl"
      itemprop="name"
    >
      <slot name="title" />
    </h3>
    <div
      itemprop="acceptedAnswer"
      itemscope
      itemtype="https://schema.org/Answer"
    >
      <div
        class="text-sm leading-relaxed text-gray-700 sm:text-base"
        itemprop="text"
      >
        <slot />
      </div>
    </div>
  </div>
</article>
