---
// Header component for overseas bank account closure service
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <div class="header-container max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="header-content flex items-center justify-between h-16 md:h-20">
      
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 md:w-10 md:h-10 bg-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg md:text-xl">G</span>
          </div>
          <span class="text-xl md:text-2xl font-bold text-gray-900">GOALS21</span>
        </a>
      </div>
      
      <!-- Desktop Navigation (Hidden, using hamburger menu for all) -->
      <nav class="hidden">
        <a href="#service" class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium">
          サービス
        </a>
        <a href="#countries" class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium">
          対応国・銀行
        </a>
        <a href="#cases" class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium">
          事例
        </a>
        <a href="#pricing" class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium">
          料金
        </a>
        <a href="#company" class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium">
          会社情報
        </a>
        <a href="#recruit" class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium">
          採用情報
        </a>
      </nav>
      
      <!-- CTA Button & Hamburger Menu Button -->
      <div class="flex items-center space-x-4">
        <!-- CTA Button -->
        <a 
          href="#contact" 
          class="bg-blue-600 text-white px-4 py-2 md:px-6 md:py-3 rounded-full font-medium hover:bg-blue-700 transition-colors duration-200 text-sm md:text-base"
        >
          お問い合わせ
        </a>
        
        <!-- Hamburger Menu Button (Always visible) -->
        <button 
          id="mobile-menu-button"
          class="btn w-[50px] md:w-[60px] aspect-square ring-0 bg-[#0084FF] hover:bg-[#0070E0] transition-colors duration-200 rounded-full flex items-center justify-center"
          aria-label="メニューを開く"
        >
          <svg class="w-5 h-5 md:w-6 md:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      
    </div>
  </div>
  
  <!-- Navigation Menu -->
  <div id="mobile-menu" class="hidden bg-white border-t border-gray-100 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
      <div class="py-6 space-y-6">
        <a href="#service" class="block text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium text-lg py-2 border-b border-gray-100">
          サービス
        </a>
        <a href="#countries" class="block text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium text-lg py-2 border-b border-gray-100">
          対応国・銀行
        </a>
        <a href="#cases" class="block text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium text-lg py-2 border-b border-gray-100">
          事例
        </a>
        <a href="#pricing" class="block text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium text-lg py-2 border-b border-gray-100">
          料金
        </a>
        <a href="#company" class="block text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium text-lg py-2 border-b border-gray-100">
          会社情報
        </a>
        <a href="#recruit" class="block text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium text-lg py-2">
          採用情報
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
        
        // Update button icon and aria-label
        const svg = mobileMenuButton.querySelector('svg path');
        const isOpen = !mobileMenu.classList.contains('hidden');
        
        if (svg) {
          if (isOpen) {
            svg.setAttribute('d', 'M6 18L18 6M6 6l12 12'); // X icon
            mobileMenuButton.setAttribute('aria-label', 'メニューを閉じる');
          } else {
            svg.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger icon
            mobileMenuButton.setAttribute('aria-label', 'メニューを開く');
          }
        }
      });
      
      // Close mobile menu when clicking on links
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', function() {
          mobileMenu.classList.add('hidden');
          const svg = mobileMenuButton.querySelector('svg path');
          if (svg) {
            svg.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
          }
          mobileMenuButton.setAttribute('aria-label', 'メニューを開く');
        });
      });
    }
  });
</script>
