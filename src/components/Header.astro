---
// Header component for overseas bank account closure service
---

<header
  class="fixed top-0 right-0 left-0 z-50 border-b border-gray-100 bg-white/95 backdrop-blur-sm"
>
  <div class="header-container mx-auto max-w-7xl px-4 md:px-6 lg:px-8">
    <div class="header-content flex h-16 items-center justify-between md:h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div
            class="flex h-8 w-8 items-center justify-center rounded-lg bg-blue-600 md:h-10 md:w-10"
          >
            <span class="text-lg font-bold text-white md:text-xl">G</span>
          </div>
          <span class="text-xl font-bold text-gray-900 md:text-2xl">
            GOALS21
          </span>
        </a>
      </div>

      <!-- Desktop Navigation (Hidden, using hamburger menu for all) -->
      <nav class="hidden">
        <a
          href="#service"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          サービス
        </a>
        <a
          href="#countries"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          対応国・銀行
        </a>
        <a
          href="#cases"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          事例
        </a>
        <a
          href="#pricing"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          料金
        </a>
        <a
          href="#company"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          会社情報
        </a>
        <a
          href="#recruit"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          採用情報
        </a>
      </nav>

      <!-- CTA Button & Hamburger Menu Button -->
      <div class="flex items-center space-x-4">
        <!-- CTA Button -->
        <a
          href="#contact"
          class="rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white transition-colors duration-200 hover:bg-blue-700 md:px-6 md:py-3 md:text-base"
        >
          お問い合わせ
        </a>

        <!-- Hamburger Menu Button (Always visible) -->
        <button
          id="mobile-menu-button"
          class="btn flex aspect-square w-[50px] items-center justify-center rounded-full bg-[#0084FF] ring-0 transition-colors duration-200 hover:bg-[#0070E0] md:w-[60px]"
          aria-label="メニューを開く"
        >
          <svg
            class="h-5 w-5 text-white md:h-6 md:w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            >
            </path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Navigation Menu -->
  <div
    id="mobile-menu"
    class="hidden border-t border-gray-100 bg-white shadow-lg"
  >
    <div class="mx-auto max-w-7xl px-4 md:px-6 lg:px-8">
      <div class="space-y-6 py-6">
        <a
          href="#service"
          class="block border-b border-gray-100 py-2 text-lg font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          サービス
        </a>
        <a
          href="#countries"
          class="block border-b border-gray-100 py-2 text-lg font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          対応国・銀行
        </a>
        <a
          href="#cases"
          class="block border-b border-gray-100 py-2 text-lg font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          事例
        </a>
        <a
          href="#pricing"
          class="block border-b border-gray-100 py-2 text-lg font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          料金
        </a>
        <a
          href="#company"
          class="block border-b border-gray-100 py-2 text-lg font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          会社情報
        </a>
        <a
          href="#recruit"
          class="block py-2 text-lg font-medium text-gray-700 transition-colors duration-200 hover:text-blue-600"
        >
          採用情報
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function () {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function () {
        mobileMenu.classList.toggle('hidden');

        // Update button icon and aria-label
        const svg = mobileMenuButton.querySelector('svg path');
        const isOpen = !mobileMenu.classList.contains('hidden');

        if (svg) {
          if (isOpen) {
            svg.setAttribute('d', 'M6 18L18 6M6 6l12 12'); // X icon
            mobileMenuButton.setAttribute('aria-label', 'メニューを閉じる');
          } else {
            svg.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger icon
            mobileMenuButton.setAttribute('aria-label', 'メニューを開く');
          }
        }
      });

      // Close mobile menu when clicking on links
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', function () {
          mobileMenu.classList.add('hidden');
          const svg = mobileMenuButton.querySelector('svg path');
          if (svg) {
            svg.setAttribute('d', 'M4 6h16M4 12h16M4 18h16');
          }
          mobileMenuButton.setAttribute('aria-label', 'メニューを開く');
        });
      });
    }
  });
</script>
