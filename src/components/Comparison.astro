---
// Comparison section component
import IntersectionObserver from './IntersectionObserver.astro';
---

<section
  aria-labelledby="comparison-heading"
  class="bg-gradient-to-br from-gray-50 to-gray-100 py-6 sm:py-12"
>
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <IntersectionObserver
      class="data-[observer=true]:animate-fade-in-up-800 delay-order-child opacity-0"
    >
      <h2
        id="comparison-heading"
        class="mb-8 text-center text-2xl font-bold text-slate-800 sm:mb-12 sm:text-4xl lg:text-5xl"
      >
        他の選択肢との比較
      </h2>
    </IntersectionObserver>

    <div class="overflow-x-auto md:overflow-x-visible">
      <div class="flex md:grid md:grid-cols-4">
        <!-- 当サービス -->
        <IntersectionObserver
          class="data-[observer=true]:animate-fade-in-up-800 delay-order-child opacity-0"
        >
          <div
            class="from-primary-50 to-primary-100 relative flex h-full w-44 flex-shrink-0 flex-col overflow-hidden bg-gradient-to-b shadow-xl md:w-auto md:flex-shrink"
          >
            <div
              class="from-primary-600 to-primary-700 relative flex h-24 items-center justify-center bg-gradient-to-r px-4 py-4 sm:h-28 sm:px-6 sm:py-6"
            >
              <h3
                class="flex flex-col items-center text-center text-lg font-bold text-white sm:text-xl"
              >
                当サービス
              </h3>
              <!-- おすすめバッジ - ヘッダーの下部に50%はみ出して配置 -->
              <div
                class="absolute bottom-0 left-1/2 z-10 -translate-x-1/2 translate-y-1/2 transform sm:bottom-0"
              >
                <span
                  class="text-primary-700 rounded-full bg-yellow-300 px-3 py-1 text-xs font-semibold"
                >
                  おすすめ
                </span>
              </div>
            </div>
            <div class="flex flex-1 flex-col p-4 sm:p-6">
              <div class="flex h-20 flex-col justify-center py-2 text-center">
                <div class="mb-2 text-sm font-medium text-slate-600">費用</div>
                <div class="text-primary-700 text-lg font-bold sm:text-xl">
                  22万円〜
                </div>
              </div>
              <div
                class="border-primary-200 flex h-20 flex-col justify-center border-t py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">期間</div>
                <div class="text-lg font-bold text-green-600 sm:text-xl">
                  1-6ヶ月
                </div>
              </div>
              <div
                class="border-primary-200 flex h-20 flex-col justify-center border-t py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">
                  成功率
                </div>
                <div class="text-lg font-bold text-green-600 sm:text-xl">
                  95%以上
                </div>
              </div>
              <div
                class="border-primary-200 flex h-20 flex-col justify-center border-t py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">負担</div>
                <div class="text-lg font-bold text-green-600 sm:text-xl">
                  なし
                </div>
              </div>
            </div>
          </div>
        </IntersectionObserver>

        <!-- 自力で対応 -->
        <IntersectionObserver
          class="data-[observer=true]:animate-fade-in-up-800 delay-order-child opacity-0"
        >
          <div
            class="flex h-full w-44 flex-shrink-0 flex-col overflow-hidden bg-white shadow-lg md:w-auto md:flex-shrink"
          >
            <div
              class="flex h-24 items-center justify-center bg-slate-100 px-4 py-4 sm:h-28 sm:px-6 sm:py-6"
            >
              <h3
                class="text-center text-lg font-semibold text-slate-700 sm:text-xl"
              >
                自力で対応
              </h3>
            </div>
            <div class="flex flex-1 flex-col p-4 sm:p-6">
              <div class="flex h-20 flex-col justify-center py-2 text-center">
                <div class="mb-2 text-sm font-medium text-slate-600">費用</div>
                <div class="text-base font-semibold text-slate-700 sm:text-lg">
                  実費のみ
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">期間</div>
                <div class="text-base font-semibold text-red-600 sm:text-lg">
                  1年以上
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">
                  成功率
                </div>
                <div class="text-base font-semibold text-red-600 sm:text-lg">
                  30%程度
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">負担</div>
                <div class="text-base font-semibold text-red-600 sm:text-lg">
                  非常に大
                </div>
              </div>
            </div>
          </div>
        </IntersectionObserver>

        <!-- 現地渡航 -->
        <IntersectionObserver
          class="data-[observer=true]:animate-fade-in-up-800 delay-order-child opacity-0"
        >
          <div
            class="flex h-full w-44 flex-shrink-0 flex-col overflow-hidden bg-white shadow-lg md:w-auto md:flex-shrink"
          >
            <div
              class="flex h-24 items-center justify-center bg-slate-100 px-4 py-4 sm:h-28 sm:px-6 sm:py-6"
            >
              <h3
                class="text-center text-lg font-semibold text-slate-700 sm:text-xl"
              >
                現地渡航
              </h3>
            </div>
            <div class="flex flex-1 flex-col p-4 sm:p-6">
              <div class="flex h-20 flex-col justify-center py-2 text-center">
                <div class="mb-2 text-sm font-medium text-slate-600">費用</div>
                <div class="text-base font-semibold text-orange-600 sm:text-lg">
                  30-50万円
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">期間</div>
                <div class="text-base font-semibold text-orange-600 sm:text-lg">
                  1週間+準備期間
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">
                  成功率
                </div>
                <div class="text-base font-semibold text-orange-600 sm:text-lg">
                  70%程度
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">負担</div>
                <div class="text-base font-semibold text-orange-600 sm:text-lg">
                  大
                </div>
              </div>
            </div>
          </div>
        </IntersectionObserver>

        <!-- 放置継続 -->
        <IntersectionObserver
          class="data-[observer=true]:animate-fade-in-up-800 delay-order-child opacity-0"
        >
          <div
            class="flex h-full w-44 flex-shrink-0 flex-col overflow-hidden bg-white shadow-lg md:w-auto md:flex-shrink"
          >
            <div
              class="flex h-24 items-center justify-center bg-slate-100 px-4 py-4 sm:h-28 sm:px-6 sm:py-6"
            >
              <h3
                class="text-center text-lg font-semibold text-slate-700 sm:text-xl"
              >
                放置継続
              </h3>
            </div>
            <div class="flex flex-1 flex-col p-4 sm:p-6">
              <div class="flex h-20 flex-col justify-center py-2 text-center">
                <div class="mb-2 text-sm font-medium text-slate-600">費用</div>
                <div class="text-base font-semibold text-red-600 sm:text-lg">
                  維持費累積
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">期間</div>
                <div class="text-base font-semibold text-slate-600 sm:text-lg">
                  -
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">
                  成功率
                </div>
                <div class="text-base font-semibold text-red-600 sm:text-lg">
                  預金消失リスク
                </div>
              </div>
              <div
                class="flex h-20 flex-col justify-center border-t border-slate-200 py-2 pt-4 text-center"
              >
                <div class="mb-2 text-sm font-medium text-slate-600">負担</div>
                <div class="text-base font-semibold text-red-600 sm:text-lg">
                  将来的に増大
                </div>
              </div>
            </div>
          </div>
        </IntersectionObserver>
      </div>
    </div>
  </div>
</section>
