---
// IntersectionObserver component - slotを使った汎用的な交差監視コンポーネント
export interface Props {
  /**
   * 交差の閾値 (0.0 - 1.0)
   * @default 0.1
   */
  threshold?: number;
  /**
   * ルートマージン
   * @default '0px'
   */
  rootMargin?: string;
  /**
   * 繰り返し実行するかどうか
   * @default false
   */
  repeat?: boolean;
  /**
   * 追加のクラス名
   */
  class?: string;
  /**
   * その他のHTML属性
   */
  [key: string]: unknown;
}

const {
  threshold = 0.1,
  rootMargin = "0px",
  repeat = false,
  class: className = "",
  ...rest
} = Astro.props;
---

<div
  class={`intersection-observer ${className}`}
  data-threshold={threshold}
  data-root-margin={rootMargin}
  data-repeat={repeat}
  {...rest}
>
  <slot />
</div>

<script>
  // IntersectionObserverを設定
  function initIntersectionObserver() {
    console.log('Initializing IntersectionObserver...');
    const observers = new Map();

    // 各intersection-observer要素を監視
    const containers = document.querySelectorAll('.intersection-observer');
    console.log('Found containers:', containers.length);
    
    containers.forEach(container => {
      const threshold = parseFloat(
        container.getAttribute('data-threshold') || '0.1'
      );
      const rootMargin = container.getAttribute('data-root-margin') || '0px';
      const repeat = container.getAttribute('data-repeat') === 'true';

      console.log('Setting up observer for:', container, {threshold, rootMargin, repeat});

      const options = {
        root: null,
        rootMargin: rootMargin,
        threshold: threshold,
      };

      const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
          const element = entry.target;
          console.log('Intersection entry:', entry.isIntersecting, element);

          if (entry.isIntersecting) {
            // 要素が画面に入った時
            element.setAttribute('data-observer', 'true');
            console.log('Element entered view:', element);

            // 一度だけ実行する場合は監視を停止
            if (!repeat) {
              observer.unobserve(element);
            }
          } else {
            // 要素が画面から出た時（repeatがtrueの場合のみ）
            if (repeat) {
              element.setAttribute('data-observer', 'false');
              console.log('Element left view:', element);
            }
          }
        });
      }, options);

      // コンテナ自体を監視
      container.setAttribute('data-observer', 'false');
      observer.observe(container);
      console.log('Started observing:', container);

      // 子要素も監視対象にする場合
      container.querySelectorAll('[data-observe]').forEach(child => {
        child.setAttribute('data-observer', 'false');
        observer.observe(child);
      });

      observers.set(container, observer);
    });

    // クリーンアップ関数を返す
    return () => {
      observers.forEach(observer => observer.disconnect());
    };
  }

  // DOM読み込み完了後に実行
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initIntersectionObserver);
  } else {
    initIntersectionObserver();
  }
</script>
