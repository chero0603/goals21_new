---
import '@/styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = '海外口座解約手続サポート | 現地渡航不要・英語力不要で解約完了',
  description = '海外口座の解約手続きを完全サポート。現地に行かずに口座解約と預金送金が可能。英語対応や書類作成も全てお任せください。',
} = Astro.props;
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="海外口座,解約手続き,預金送金,海外銀行,現地渡航不要,英語不要,サポート"
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://gold-t.tokyo/" />
    <link rel="icon" href="favicon.ico" sizes="any" />
    <meta name="generator" content={Astro.generator} />

    <!-- OGP メタタグ -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://gold-t.tokyo/" />
    <meta property="og:image" content="https://gold-t.tokyo/ogp.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="海外銀行お助けネット" />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter Card メタタグ -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://gold-t.tokyo/ogp.jpg" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FinancialService",
        "name": "海外銀行お助けネット",
        "description": "海外口座の解約手続きを完全サポート。現地に行かずに口座解約と預金送金が可能。",
        "url": "https://gold-t.tokyo/",
        "serviceType": "海外口座解約手続サポート",
        "areaServed": "日本",
        "email": "support@gold-t.tokyo"
      }
    </script>
  </head>
  <body itemscope itemtype="https://schema.org/WebPage">
    <main class="font-base">
      <slot />
    </main>
  </body>
</html>
